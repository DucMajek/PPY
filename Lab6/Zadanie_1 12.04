def is_perfect_number(n):
    divisors = [i for i in range(1, n) if n % i == 0]
    return sum(divisors) == n

def check_perfect_numbers(*args):
    result = {}
    for n in args:
        result[n] = is_perfect_number(n)
    return result

result = check_perfect_numbers(6, 28, 496)
print(result)
